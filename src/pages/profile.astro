import Layout from '../layouts/Layout.astro';
---

<Layout title="Profilim | Agora Go Akademisi">
  <div class="profile-container">
    <div class="profile-card">
      
      <div class="profile-header">
        <div class="avatar-circle" id="avatar-placeholder">
           <span id="avatar-initial">?</span>
        </div>
        <h1 id="display-username">Y√ºkleniyor...</h1>
        <p id="display-email" class="email-text">...</p>
      </div>

      <div class="level-section">
        <div class="level-info">
            <span class="level-badge" id="display-level">Lvl 1</span>
            <span class="xp-text"><span id="current-xp">0</span> XP</span>
        </div>
        <div class="progress-track">
            <div class="progress-fill" id="xp-bar" style="width: 0%"></div>
        </div>
        <p class="next-level-text">Sonraki seviyeye: <span id="xp-needed">100</span> XP</p>
      </div>

      <div class="stats-grid">
          <div class="stat-card">
              <span class="stat-icon">üèÜ</span>
              <div class="stat-content">
                  <span class="stat-value" id="stat-completed">0</span>
                  <span class="stat-label">Tamamlanan Set</span>
              </div>
          </div>
          <div class="stat-card">
              <span class="stat-icon">üî•</span>
              <div class="stat-content">
                  <span class="stat-value" id="stat-streak">0</span>
                  <span class="stat-label">G√ºnl√ºk Seri</span>
              </div>
          </div>
      </div>

      <div class="achievements-section">
          <h3>Rozetlerim</h3>
          <div class="badges-grid" id="badges-container">
              <div class="badge-item locked">üîí</div>
          </div>
      </div>

      <div class="profile-info">
        <div class="info-item">
          <label>Kullanƒ±cƒ± Adƒ±</label>
          <span id="info-username">-</span>
        </div>
        <div class="info-item">
          <label>Kayƒ±t Tarihi</label>
          <span id="info-date">-</span>
        </div>
        <div class="info-item">
          <label>Hesap Tipi</label>
          <span>Agora √úyesi</span>
        </div>
      </div>

      <div class="profile-actions">
        <button id="logout-btn" class="btn-danger">Oturumu Kapat</button>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  async function initProfile() {
    const { data: { user } } = await supabase.auth.getUser();

    if (!user) {
      window.location.href = '/signup';
      return;
    }

    // DOM Elemanlarƒ±nƒ± Se√ß
    const els = {
        username: document.getElementById('display-username'),
        email: document.getElementById('display-email'),
        infoUsername: document.getElementById('info-username'),
        infoDate: document.getElementById('info-date'),
        avatarInitial: document.getElementById('avatar-initial'),
        levelBadge: document.getElementById('display-level'),
        currentXp: document.getElementById('current-xp'),
        xpBar: document.getElementById('xp-bar'),
        xpNeeded: document.getElementById('xp-needed'),
        statCompleted: document.getElementById('stat-completed'),
        badgesContainer: document.getElementById('badges-container')
    };

    if (els.email) els.email.textContent = user.email || "";

    // KULLANICI PROFƒ∞Lƒ∞Nƒ∞ √áEK
    const { data: profile, error } = await supabase
      .from('agorasusers')
      .select('*')
      .eq('id', user.id)
      .single();

    // TAMAMLANAN SETLERƒ∞ √áEK
    const { data: progressData, count: completedCount } = await supabase
        .from('user_progress')
        .select('category_id', { count: 'exact' })
        .eq('user_id', user.id);

    if (error) console.error('Profil hatasƒ±:', error);

    const displayName = profile?.username || user.email?.split('@')[0] || "Oyuncu";
    
    // Temel Bilgileri Yaz
    if (els.username) els.username.textContent = displayName;
    if (els.infoUsername) els.infoUsername.textContent = displayName;
    if (els.infoDate && profile?.created_at) els.infoDate.textContent = new Date(profile.created_at).toLocaleDateString('tr-TR');
    if (els.avatarInitial) els.avatarInitial.textContent = (displayName[0] || '?').toUpperCase();

    // --- LEVEL ve XP ---
    const totalXP = profile?.xp || 0;
    const currentLevel = profile?.level || 1;
    const xpPerLevel = 100; 
    const xpInCurrentLevel = totalXP % xpPerLevel; 
    const progressPercent = (xpInCurrentLevel / xpPerLevel) * 100;
    const xpToNext = xpPerLevel - xpInCurrentLevel;

    if (els.levelBadge) els.levelBadge.textContent = `Lvl ${currentLevel}`;
    if (els.currentXp) els.currentXp.textContent = totalXP.toString(); 
    if (els.xpNeeded) els.xpNeeded.textContent = xpToNext.toString();
    
    // XP Bar Animasyonu
    if (els.xpBar) {
        const bar = els.xpBar;
        setTimeout(() => { 
            bar.style.width = `${progressPercent}%`; 
        }, 100);
    }

    // --- ƒ∞STATƒ∞STƒ∞KLER ---
    if (els.statCompleted) els.statCompleted.textContent = (completedCount || 0).toString();

    // --- ROZET MANTIƒûI ---
    const badgesHTML: string[] = []; 
    const count = completedCount || 0;

    // Rozet 1: ƒ∞lk Adƒ±m (1 Set)
    if (count >= 1) badgesHTML.push(`<div class="badge-item unlocked" title="ƒ∞lk Adƒ±m: 1 Set Tamamlandƒ±">üå±</div>`);
    else badgesHTML.push(`<div class="badge-item locked" title="1 Set Tamamla">üîí</div>`);

    // Rozet 2: √áƒ±rak (5 Set)
    if (count >= 5) badgesHTML.push(`<div class="badge-item unlocked" title="√áƒ±rak: 5 Set Tamamlandƒ±">üî®</div>`);
    else badgesHTML.push(`<div class="badge-item locked" title="5 Set Tamamla">üîí</div>`);

    // Rozet 3: Usta (10 Set)
    if (count >= 10) badgesHTML.push(`<div class="badge-item unlocked" title="Usta: 10 Set Tamamlandƒ±">‚öîÔ∏è</div>`);
    else badgesHTML.push(`<div class="badge-item locked" title="10 Set Tamamla">üîí</div>`);

    if (els.badgesContainer) els.badgesContainer.innerHTML = badgesHTML.join('');
  }

  const logoutBtn = document.getElementById('logout-btn');
  if (logoutBtn) {
      logoutBtn.addEventListener('click', async () => {
          await supabase.auth.signOut();
          window.location.href = '/signup';
      });
  }

  initProfile();
</script>

<style>
  /* GENEL STƒ∞LLER */
  .profile-container { max-width: 500px; margin: 5rem auto; padding: 0 1rem; font-family: 'Inter', sans-serif; }
  .profile-card { background: white; padding: 2.5rem; border-radius: 24px; box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1); text-align: center; }
  .avatar-circle { width: 80px; height: 80px; background: #2c3e50; margin: 0 auto 1rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2.5rem; color: white; font-weight: bold; box-shadow: 0 4px 10px rgba(44, 62, 80, 0.3); }
  h1 { font-size: 1.5rem; color: #1e293b; margin-bottom: 0.25rem; font-weight: 800; }
  .email-text { color: #64748b; font-size: 0.9rem; margin-bottom: 1.5rem; }

  /* LEVEL B√ñL√úM√ú */
  .level-section { background: #f1f5f9; padding: 1.5rem; border-radius: 16px; margin-bottom: 2rem; text-align: left; }
  .level-info { display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px; }
  .level-badge { background: #f59e0b; color: white; padding: 4px 12px; border-radius: 20px; font-weight: 800; font-size: 0.9rem; box-shadow: 0 2px 5px rgba(245, 158, 11, 0.4); }
  .xp-text { font-weight: 600; color: #475569; font-size: 0.9rem; }
  .progress-track { width: 100%; height: 10px; background: #e2e8f0; border-radius: 10px; overflow: hidden; position: relative; }
  .progress-fill { height: 100%; background: linear-gradient(90deg, #f59e0b, #d97706); border-radius: 10px; width: 0%; transition: width 1s cubic-bezier(0.4, 0, 0.2, 1); }
  .next-level-text { font-size: 0.8rem; color: #94a3b8; margin-top: 8px; text-align: right; }

  /* --- YENƒ∞: ƒ∞STATƒ∞STƒ∞K GRID --- */
  .stats-grid { display: flex; gap: 15px; margin-bottom: 2rem; }
  .stat-card { flex: 1; background: #f8fafc; border: 1px solid #e2e8f0; border-radius: 16px; padding: 15px; display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 5px; transition: transform 0.2s; }
  .stat-card:hover { transform: translateY(-3px); border-color: #cbd5e1; }
  .stat-icon { font-size: 1.5rem; margin-bottom: 5px; }
  .stat-value { font-size: 1.5rem; font-weight: 800; color: #1e293b; line-height: 1; }
  .stat-label { font-size: 0.75rem; color: #64748b; font-weight: 600; text-transform: uppercase; }

  /* --- YENƒ∞: ROZETLER --- */
  .achievements-section { text-align: left; margin-bottom: 2rem; }
  .achievements-section h3 { font-size: 1rem; color: #475569; margin-bottom: 10px; font-weight: 700; }
  .badges-grid { display: flex; gap: 10px; flex-wrap: wrap; }
  .badge-item { width: 50px; height: 50px; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; cursor: help; transition: transform 0.2s; }
  .badge-item:hover { transform: scale(1.1); }
  .badge-item.locked { background: #e2e8f0; opacity: 0.5; filter: grayscale(1); }
  .badge-item.unlocked { background: #dbeafe; border: 2px solid #3b82f6; box-shadow: 0 4px 10px rgba(59, 130, 246, 0.2); }

  /* Bƒ∞LGƒ∞ KARTLARI */
  .profile-info { text-align: left; margin-bottom: 2rem; }
  .info-item { display: flex; justify-content: space-between; padding: 0.75rem 0; border-bottom: 1px solid #e2e8f0; }
  .info-item:last-child { border: none; }
  label { font-weight: 600; color: #64748b; font-size: 0.9rem; }
  span { color: #1e293b; font-size: 0.95rem; font-weight: 500; }

  .btn-danger { width: 100%; padding: 0.85rem; border: none; border-radius: 12px; background: #ef4444; color: white; font-weight: 600; cursor: pointer; transition: all 0.2s; }
  .btn-danger:hover { background: #dc2626; transform: translateY(-2px); box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3); }

  /* DARK MODE UYUMLULUƒûU */
  :global(body.dark) .profile-card { background: #1e293b; border: 1px solid #334155; }
  :global(body.dark) h1 { color: #f1f5f9; }
  :global(body.dark) .level-section { background: #0f172a; }
  :global(body.dark) .progress-track { background: #334155; }
  :global(body.dark) span, :global(body.dark) label { color: #cbd5e1; }
  :global(body.dark) .stat-card { background: #0f172a; border-color: #334155; }
  :global(body.dark) .stat-value { color: #f1f5f9; }
  :global(body.dark) .badge-item.locked { background: #334155; }
  :global(body.dark) .info-item { border-bottom-color: #334155; }
</style>