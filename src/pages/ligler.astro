  },
  {
    id: 3,
    name: "Aydınlanma Ligi",
    sub: "5 kyu ve üstü",
    status: "Kayıtlar Açık",
    participants: [],
    standings: [{  }],
    fixtures: [{ week: "1. Hafta", matches: [] }]
  },
