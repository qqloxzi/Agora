<script>
  import { supabase } from '../lib/supabase';
  import type { User } from '@supabase/supabase-js'; // User tipini ekledik

  // DOM Elementlerini SeÃ§imi
  const els = {
    formContainer: document.getElementById('post-form-container'),
    loginWarning: document.getElementById('login-warning'),
    form: document.getElementById('forum-form') as HTMLFormElement | null,
    titleInput: document.getElementById('post-title') as HTMLInputElement | null,
    contentInput: document.getElementById('post-content') as HTMLTextAreaElement | null,
    feed: document.getElementById('posts-feed')
  };

  // HATA Ã‡Ã–ZÃœMÃœ 1: DeÄŸiÅŸkenin hem User hem null olabileceÄŸini belirttik
  let currentUser: User | null = null;

  async function initForum() {
    // 1. KullanÄ±cÄ±yÄ± Kontrol Et
    const { data: { user } } = await supabase.auth.getUser();
    currentUser = user;

    if (user) {
      if(els.formContainer) els.formContainer.style.display = 'block';
    } else {
      if(els.loginWarning) els.loginWarning.style.display = 'block';
    }

    // 2. GÃ¶nderileri Ã‡ek
    await fetchPosts();
  }

  async function fetchPosts() {
    const { data, error } = await supabase
      .from('forum_posts')
      .select(`
        *,
        agorasusers ( username )
      `)
      .order('created_at', { ascending: false });

    if (error) {
      console.error("Postlar Ã§ekilemedi:", error);
      if(els.feed) els.feed.innerHTML = `<p class="error-text">Veriler yÃ¼klenirken hata oluÅŸtu.</p>`;
      return;
    }

    // Gelen veriyi render fonksiyonuna gÃ¶nder
    if (data) {
        renderPosts(data);
    }
  }

  // HATA Ã‡Ã–ZÃœMÃœ 2: 'posts' parametresinin herhangi bir dizisi (any[]) olabileceÄŸini sÃ¶yledik.
  // Bu sayede 'never' hatasÄ± Ã§Ã¶zÃ¼ldÃ¼.
  function renderPosts(posts: any[]) {
    // HATA Ã‡Ã–ZÃœMÃœ 3: els.feed null mu diye kontrol ediyoruz
    if (!els.feed) return;
    
    els.feed.innerHTML = '';

    if (posts.length === 0) {
      els.feed.innerHTML = `<div class="empty-state">HenÃ¼z kimse bir ÅŸey yazmamÄ±ÅŸ. Ä°lk sen ol! ğŸ¤</div>`;
      return;
    }

    posts.forEach(post => {
      const date = new Date(post.created_at).toLocaleDateString('tr-TR', { 
        day: 'numeric', month: 'long', hour: '2-digit', minute:'2-digit' 
      });

      // KullanÄ±cÄ± adÄ± gÃ¼venliÄŸi
      // agorasusers dizisi veya objesi gelebilir, kontrol ediyoruz
      let authorName = 'Bilinmeyen Oyuncu';
      
      // Supabase bazen tekli iliÅŸkiyi obje, bazen dizi olarak dÃ¶ndÃ¼rebilir.
      if (post.agorasusers) {
          if (Array.isArray(post.agorasusers) && post.agorasusers.length > 0) {
              authorName = post.agorasusers[0].username;
          } else if (post.agorasusers.username) {
              authorName = post.agorasusers.username;
          }
      }

      const initial = authorName[0] ? authorName[0].toUpperCase() : '?';

      const html = `
        <div class="post-card">
          <div class="post-header">
            <div class="author-avatar">${initial}</div>
            <div class="author-info">
              <span class="author-name">@${authorName}</span>
              <span class="post-date">${date}</span>
            </div>
          </div>
          
          ${post.title ? `<h3 class="post-title">${escapeHtml(post.title)}</h3>` : ''}
          <div class="post-body">
            ${formatContent(escapeHtml(post.content))}
          </div>
        </div>
      `;
      
      // HATA Ã‡Ã–ZÃœMÃœ 3 (DevamÄ±): YukarÄ±da !els.feed kontrolÃ¼ yaptÄ±ÄŸÄ±mÄ±z iÃ§in burada gÃ¼venle kullanabiliriz.
      // Ancak TypeScript bazen callback iÃ§inde bunu unutabilir, tekrar ? koymak saÄŸlam olur.
      if (els.feed) els.feed.innerHTML += html;
    });
  }

  function escapeHtml(text: string) {
    if(!text) return "";
    return text
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;")
        .replace(/"/g, "&quot;")
        .replace(/'/g, "&#039;");
  }

  function formatContent(text: string) {
      return text.replace(/\n/g, '<br>');
  }

  // --- GÃ–NDERÄ° PAYLAÅMA ---
  if (els.form) {
    els.form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (!currentUser) return alert("LÃ¼tfen giriÅŸ yapÄ±n.");

      // InputlarÄ±n null olmadÄ±ÄŸÄ±nÄ± kontrol et
      if (!els.titleInput || !els.contentInput) return;

      const title = els.titleInput.value.trim();
      const content = els.contentInput.value.trim();

      if (!content) return alert("Ä°Ã§erik boÅŸ olamaz!");

      const { error } = await supabase
        .from('forum_posts')
        .insert({
          user_id: currentUser.id,
          title: title || null,
          content: content
        });

      if (error) {
        alert("PaylaÅŸÄ±m baÅŸarÄ±sÄ±z: " + error.message);
      } else {
        if (els.form) els.form.reset();
        await fetchPosts();
      }
    });
  }

  initForum();
</script>

