---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Agora Meydanƒ± | Agora Go Akademisi">
  <div class="forum-container">
    
    <header class="forum-header">
      <h1>Agora Meydanƒ± üèõÔ∏è</h1>
      <p>Toplulukla tartƒ±≈ü, soru sor ve fikirlerini payla≈ü.</p>
    </header>

    <div class="create-post-card" id="post-form-container" style="display: none;">
      <form id="forum-form">
        <input type="text" id="post-title" placeholder="Konu Ba≈ülƒ±ƒüƒ± (Opsiyonel)" class="form-input title-input" />
        <textarea id="post-content" placeholder="Aklƒ±ndan neler ge√ßiyor? Go hakkƒ±nda bir ≈üeyler s√∂yle..." required class="form-input content-input"></textarea>
        <div class="form-actions">
          <button type="submit" class="btn-submit">Payla≈ü üöÄ</button>
        </div>
      </form>
    </div>

    <div id="login-warning" class="login-warning" style="display: none;">
        <p>Payla≈üƒ±m yapmak i√ßin <a href="/signup">giri≈ü yapmalƒ±sƒ±nƒ±z</a>.</p>
    </div>

    <div class="posts-feed" id="posts-feed">
        <div class="loading-spinner">Y√ºkleniyor...</div>
    </div>

  </div>
</Layout>

<script>
  import { supabase } from '../lib/supabase';
  import type { User } from '@supabase/supabase-js';

  const els = {
    formContainer: document.getElementById('post-form-container'),
    loginWarning: document.getElementById('login-warning'),
    form: document.getElementById('forum-form') as HTMLFormElement | null,
    titleInput: document.getElementById('post-title') as HTMLInputElement | null,
    contentInput: document.getElementById('post-content') as HTMLTextAreaElement | null,
    feed: document.getElementById('posts-feed')
  };

  let currentUser: User | null = null;

  async function initForum() {
    try {
      const { data: { user } } = await supabase.auth.getUser();
      currentUser = user;

      if (user) {
        if(els.formContainer) els.formContainer.style.display = 'block';
      } else {
        if(els.loginWarning) els.loginWarning.style.display = 'block';
      }

      await fetchPosts();
    } catch (e) {
      console.error("Ba≈ülatma hatasƒ±:", e);
    }
  }

  async function fetchPosts() {
    // √ñNEMLƒ∞: Tablo ili≈ükisi yoksa hata almamak i√ßin √∂nce d√ºz √ßekelim
    const { data, error } = await supabase
      .from('forum_posts')
      .select('*') // ≈ûimdilik ili≈ükisiz √ßekiyoruz ki kilitlenme √ß√∂z√ºls√ºn
      .order('created_at', { ascending: false });

    if (error) {
      console.error("Postlar √ßekilemedi:", error.message);
      if(els.feed) els.feed.innerHTML = `<p style="color:red">Veritabanƒ± hatasƒ±: ${error.message}</p>`;
      return;
    }

    if (data && Array.isArray(data)) {
        renderPosts(data);
    }
  }

  function renderPosts(posts: any[]) {
    if (!els.feed) return;
    els.feed.innerHTML = '';

    if (posts.length === 0) {
      els.feed.innerHTML = `<div style="text-align:center; padding:20px;">Hen√ºz mesaj yok.</div>`;
      return;
    }

    posts.forEach(post => {
      // G√ºvenli tarih ve i√ßerik kontrol√º
      const date = post.created_at ? new Date(post.created_at).toLocaleDateString('tr-TR') : "...";
      
      const html = `
        <div style="background:white; padding:15px; border-radius:10px; margin-bottom:10px; border:1px solid #ddd; color:black;">
          <small style="color:gray">${date}</small>
          <h3 style="margin:5px 0">${post.title || 'Ba≈ülƒ±ksƒ±z'}</h3>
          <p>${post.content}</p>
        </div>
      `;
      if (els.feed) els.feed.innerHTML += html;
    });
  }

  initForum();
</script>

<style>
  /* GENEL D√úZEN */
  .forum-container { max-width: 700px; margin: 0 auto; padding: 2rem 1rem; font-family: 'Inter', sans-serif; }
  
  .forum-header { text-align: center; margin-bottom: 3rem; }
  .forum-header h1 { font-size: 2.5rem; color: #1e293b; margin-bottom: 0.5rem; font-weight: 800; }
  .forum-header p { color: #64748b; font-size: 1.1rem; }

  /* FORM KARTI */
  .create-post-card { 
    background: white; padding: 1.5rem; border-radius: 16px; 
    box-shadow: 0 4px 20px rgba(0,0,0,0.05); margin-bottom: 3rem; 
    border: 1px solid #e2e8f0;
  }
  
  .form-input { 
    width: 100%; border: 1px solid #cbd5e1; border-radius: 8px; 
    padding: 12px; font-family: inherit; margin-bottom: 10px;
    transition: border-color 0.2s;
  }
  .form-input:focus { outline: none; border-color: #3b82f6; ring: 2px solid #3b82f6; }
  
  .title-input { font-weight: 700; font-size: 1.1rem; }
  .content-input { min-height: 100px; resize: vertical; }

  .form-actions { text-align: right; }
  .btn-submit {
    background: #2563eb; color: white; padding: 10px 24px; border-radius: 8px;
    font-weight: 600; border: none; cursor: pointer; transition: transform 0.1s;
  }
  .btn-submit:hover { background: #1d4ed8; transform: translateY(-1px); }

  /* Gƒ∞Rƒ∞≈û UYARISI */
  .login-warning {
      text-align: center; padding: 20px; background: #eff6ff; 
      border-radius: 12px; border: 1px solid #dbeafe; color: #1e40af;
      margin-bottom: 2rem;
  }
  .login-warning a { color: #2563eb; font-weight: bold; text-decoration: underline; }

  /* G√ñNDERƒ∞ Lƒ∞STESƒ∞ */
  .posts-feed { display: flex; flex-direction: column; gap: 20px; }
  
  .post-card { 
    background: white; padding: 1.5rem; border-radius: 16px; 
    border: 1px solid #e2e8f0; transition: box-shadow 0.2s;
  }
  .post-card:hover { box-shadow: 0 10px 30px -5px rgba(0,0,0,0.05); }

  .post-header { display: flex; align-items: center; gap: 12px; margin-bottom: 15px; }
  .author-avatar {
    width: 40px; height: 40px; background: linear-gradient(135deg, #475569, #1e293b);
    color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center;
    font-weight: bold; font-size: 1.1rem;
  }
  .author-info { display: flex; flex-direction: column; }
  .author-name { font-weight: 700; color: #0f172a; font-size: 0.95rem; }
  .post-date { font-size: 0.75rem; color: #94a3b8; }

  .post-title { margin: 0 0 8px 0; color: #1e293b; font-size: 1.2rem; }
  .post-body { color: #334155; line-height: 1.6; font-size: 1rem; }

  .empty-state { text-align: center; color: #94a3b8; padding: 40px; font-style: italic; }
  .error-text { text-align: center; color: #ef4444; }

  /* DARK MODE */
  :global(body.dark) .forum-header h1 { color: #f1f5f9; }
  :global(body.dark) .forum-header p { color: #94a3b8; }
  :global(body.dark) .create-post-card, :global(body.dark) .post-card { background: #1e293b; border-color: #334155; }
  :global(body.dark) .form-input { background: #0f172a; border-color: #334155; color: white; }
  :global(body.dark) .post-title { color: #f1f5f9; }
  :global(body.dark) .post-body { color: #cbd5e1; }
  :global(body.dark) .author-name { color: #e2e8f0; }
  :global(body.dark) .login-warning { background: #172554; border-color: #1e3a8a; color: #bfdbfe; }
</style>