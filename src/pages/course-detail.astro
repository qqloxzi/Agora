---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kurs Detayı | Agora Go">
    
    <div id="loader" class="fixed inset-0 bg-white dark:bg-gray-900 flex items-center justify-center z-50">
        <div class="flex flex-col items-center gap-4">
            <div class="w-12 h-12 border-4 border-gray-800 border-t-transparent rounded-full animate-spin"></div>
            <span class="text-gray-600 dark:text-gray-400 font-medium">Kurs bilgileri yükleniyor...</span>
        </div>
    </div>

    <div id="content" class="hidden min-h-screen pb-20 bg-gray-50 dark:bg-gray-900 text-gray-800 dark:text-gray-200 font-sans"> 
        
        <div class="bg-white dark:bg-gray-800 pt-16 pb-20 border-b border-gray-200 dark:border-gray-700">
            <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row gap-12 items-start">
                
                <div class="flex-1">
                    <div class="flex items-center gap-2 text-sm font-medium mb-6 text-gray-500">
                        <a href="/courses" class="hover:text-gray-900 dark:hover:text-white transition-colors">← Tüm Kurslara Dön</a>
                        <span>/</span>
                        <span class="text-gray-900 dark:text-white font-semibold">Kurs Detayı</span>
                    </div>

                    <h1 id="c-title" class="text-3xl md:text-4xl font-extrabold text-gray-900 dark:text-white mb-4 leading-tight tracking-tight"></h1>
                    
                    <p id="c-desc" class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl leading-relaxed font-light"></p>

                    <div class="flex items-center gap-4 mb-8 p-4 bg-gray-50 dark:bg-gray-700/30 rounded-lg border border-gray-100 dark:border-gray-700 inline-flex">
                        <img id="c-provider-avatar" class="w-10 h-10 rounded-full border border-gray-200 dark:border-gray-600" src="" alt="Provider Avatar">
                        
                        <div class="text-sm flex flex-col">
                            <span class="text-gray-500 dark:text-gray-400 text-xs uppercase tracking-wide">Eğitmen</span>
                            <a id="c-provider" href="#" class="font-bold text-gray-900 dark:text-white hover:text-blue-700 transition-colors"></a>
                        </div>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-5 items-start sm:items-center">
                        <button id="join-btn" class="bg-[#0f172a] hover:bg-[#1e293b] text-white text-base font-semibold py-3 px-8 rounded-md transition-colors dark:bg-blue-600 dark:hover:bg-blue-700">
                            Ücretsiz Kaydolun
                        </button>
                        <div class="flex items-center gap-2 text-sm border-l pl-4 border-gray-300 dark:border-gray-600">
                            <span class="font-bold text-gray-900 dark:text-white" id="c-students">--</span>
                            <span class="text-gray-500 dark:text-gray-400">öğrenci kayıtlı</span>
                        </div>
                    </div>
                    <p id="status-msg" class="text-sm font-medium mt-3 text-blue-700 dark:text-blue-400"></p>
                </div>

                <div class="w-full md:w-[400px] shrink-0 hidden md:block">
                     <img id="c-img" src="" class="w-full rounded-md shadow-lg border border-gray-200 dark:border-gray-700 object-cover h-64 bg-gray-200" alt="Course Image">
                </div>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-6 -mt-10 relative z-10">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 grid grid-cols-2 md:grid-cols-4 gap-6 divide-x divide-gray-100 dark:divide-gray-700">
                
                <div class="flex flex-col gap-1 pl-4">
                    <span class="text-xs uppercase text-gray-500 dark:text-gray-400 font-semibold tracking-wider">Eğitmen</span>
                    <span id="c-provider-stat" class="font-medium text-gray-900 dark:text-white truncate">...</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span class="text-xs uppercase text-gray-500 dark:text-gray-400 font-semibold tracking-wider">Ücret</span>
                    <span id="c-price" class="font-bold text-gray-900 dark:text-white text-lg">...</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span class="text-xs uppercase text-gray-500 dark:text-gray-400 font-semibold tracking-wider">Seviye</span>
                    <span id="c-level" class="font-medium text-gray-900 dark:text-white">Başlangıç</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span class="text-xs uppercase text-gray-500 dark:text-gray-400 font-semibold tracking-wider">Süre</span>
                    <span id="c-duration" class="font-medium text-gray-900 dark:text-white">Esnek Program</span>
                </div>
            </div>
        </div>

        <div class="border-b border-gray-200 dark:border-gray-700 mt-12">
            <div class="max-w-6xl mx-auto px-6">
                <nav class="flex gap-8">
                    <button class="border-b-2 border-gray-900 dark:border-white text-gray-900 dark:text-white font-semibold py-4 px-1 text-sm uppercase tracking-wide">Hakkında</button>
                </nav>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-6 py-12">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 border-l-4 border-blue-600 pl-3">Kazanımlar</h2>
            
            <div id="c-outcomes-list" class="grid md:grid-cols-2 gap-x-8 gap-y-4 text-gray-700 dark:text-gray-300">
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 animate-pulse mb-2"></div>
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/2 animate-pulse"></div>
            </div>
        </div>

    </div> 

    <script>
    import { createClient } from '@supabase/supabase-js';

    const loader = document.getElementById('loader') as HTMLElement;
    const content = document.getElementById('content') as HTMLElement;
    
    const cTitle = document.getElementById('c-title') as HTMLElement;
    const cDesc = document.getElementById('c-desc') as HTMLElement;
    const cProvider = document.getElementById('c-provider') as HTMLAnchorElement; 
    const cProviderAvatar = document.getElementById('c-provider-avatar') as HTMLImageElement;
    const cImg = document.getElementById('c-img') as HTMLImageElement;
    const joinBtn = document.getElementById('join-btn') as HTMLButtonElement;
    
    const cProviderStat = document.getElementById('c-provider-stat') as HTMLElement;
    const cPrice = document.getElementById('c-price') as HTMLElement; 
    const cLevel = document.getElementById('c-level') as HTMLElement;
    const cDuration = document.getElementById('c-duration') as HTMLElement;
    const cStudents = document.getElementById('c-students') as HTMLElement;
    const cOutcomesList = document.getElementById('c-outcomes-list') as HTMLElement;
    const statusMsg = document.getElementById('status-msg') as HTMLElement;

    const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    );

    const params = new URLSearchParams(window.location.search);
    const courseSlug = params.get('slug'); 

    async function init() {
        if (!loader || !content || !cTitle || !joinBtn) return;

        if (!courseSlug) {
            alert("Kurs URL hatası. Listeye yönlendiriliyorsunuz.");
            window.location.href = "/courses";
            return;
        }

        const { data: course, error } = await supabase
            .from('courses')
            .select('*')
            .eq('slug', courseSlug)
            .single();

        if (error || !course) {
            loader.innerHTML = "<p class='text-red-500 font-bold'>Kurs bulunamadı.</p>";
            return;
        }

        document.title = `${course.title} | Agora`;
        cTitle.innerText = course.title;
        if (cDesc) cDesc.innerText = course.description;
        
        const providerName = course.provider || "Agora Academy";
        if (cProvider) cProvider.innerText = providerName;

        function trToEngLink(str) {
            if (!str) return "";
            return str
                .toLowerCase()
                .replace(/ğ/g, 'g')
                .replace(/ü/g, 'u')
                .replace(/ş/g, 's')
                .replace(/ı/g, 'i')
                .replace(/ö/g, 'o')
                .replace(/ç/g, 'c')
                .replace(/[^a-z0-9]/g, ''); 
        }

        const instructorSlug = trToEngLink(providerName);
        if (cProvider) cProvider.href = `https://agoragoakademisi.com/instructor/${instructorSlug}`;
        
        if(cProviderAvatar) {
            cProviderAvatar.src = `https://ui-avatars.com/api/?name=${encodeURIComponent(providerName)}&background=0f172a&color=fff&size=128&bold=true`;
        }
        
        if(cProviderStat) cProviderStat.innerText = providerName;
        if(cPrice) cPrice.innerText = course.price || "Ücretsiz";
        if(cLevel) cLevel.innerText = course.level || "Başlangıç";
        if(cDuration) cDuration.innerText = course.duration || "Esnek Süre";
        if(cStudents && course.students_count) cStudents.innerText = course.students_count;
        if(cImg) cImg.src = course.image_url || '/go2.png';

        if (cOutcomesList) {
            cOutcomesList.innerHTML = "";
            if (course.outcomes) {
                const items = course.outcomes.split(/(?:\r\n|\r|\n|(?=\d+-))/);
                items.forEach((item: string) => {
                    let cleanItem = item.trim();
                    cleanItem = cleanItem.replace(/^\d+-\s*/, '');

                    if(cleanItem !== "" && cleanItem.length > 3) {
                        // Tasarım güncellemesi: Daha sade liste elemanları
                        const li = `
                            <div class="flex gap-3 items-start p-2 rounded hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                <span class="leading-relaxed text-gray-800 dark:text-gray-300 text-sm">${cleanItem}</span>
                            </div>
                        `;
                        cOutcomesList.innerHTML += li;
                    }
                });
            } else {
                cOutcomesList.innerHTML = "<p class='text-gray-500 italic'>Detaylı kazanım bilgisi eklenmemiş.</p>";
            }
        }

        loader.classList.add('hidden');
        content.classList.remove('hidden');

        const { data: { user } } = await supabase.auth.getUser();

        if (user) {
            const { data: enrollment } = await supabase
                .from('course_enrollments')
                .select('*')
                .eq('user_id', user.id)
                .eq('course_id', course.id)
                .single();

            if (enrollment) {
                setButtonJoined();
            }
        }

        joinBtn.addEventListener('click', async () => {
            if (!user) {
                alert("Kursa katılmak için lütfen giriş yapın.");
                window.location.href = "/login";
                return;
            }

            joinBtn.innerText = "İşleniyor...";
            joinBtn.disabled = true;
            joinBtn.classList.add("opacity-75", "cursor-not-allowed");

            const { error: joinError } = await supabase
                .from('course_enrollments')
                .insert({ 
                    user_id: user.id, 
                    course_id: course.id 
                });

            if (!joinError) {
                setButtonJoined();
                alert("Başarıyla kayıt oldunuz! İyi dersler.");
            } else {
                joinBtn.innerText = "Hata Oluştu";
                joinBtn.disabled = false;
                joinBtn.classList.remove("opacity-75", "cursor-not-allowed");
                console.error(joinError);
            }
        });
    }

    function setButtonJoined() {
        if (joinBtn && statusMsg) {
            joinBtn.innerText = "Derse Git →";
            // Buton rengi de daha kurumsal bir yeşil yapıldı
            joinBtn.className = "bg-emerald-600 hover:bg-emerald-700 text-white text-base font-semibold py-3 px-8 rounded-md shadow-sm transition-all";
            
            joinBtn.onclick = () => {
                alert("Ders içeriği yakında eklenecek!");
            };

            statusMsg.innerText = "Bu kurs kütüphanenizde mevcut.";
            statusMsg.className = "text-sm font-medium mt-3 text-emerald-700 dark:text-emerald-400 flex items-center gap-2 before:content-['✓']";
        }
    }

    init();
    </script>
</Layout>