---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kurs Detayı | Agora Go">
    
    <div id="loader" class="fixed inset-0 bg-white dark:bg-gray-900 flex items-center justify-center z-50">
        <div class="flex flex-col items-center gap-4">
            <div class="w-12 h-12 border-4 border-blue-600 border-t-transparent rounded-full animate-spin"></div>
            <span class="text-gray-500 dark:text-gray-400 font-medium">Kurs bilgileri yükleniyor...</span>
        </div>
    </div>

    <div id="content" class="hidden min-h-screen pb-20 bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-200"> 
        
        <div class="bg-[#f3f6fa] dark:bg-gray-800 pt-12 pb-24 border-b border-gray-200 dark:border-gray-700 relative overflow-hidden transition-colors duration-300">
            <div class="absolute right-0 top-0 h-full w-1/2 pointer-events-none opacity-5 dark:opacity-10">
                <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <path fill="#0056D2" d="M44.7,-76.4C58.9,-69.2,71.8,-59.1,81.6,-46.6C91.4,-34.1,98.1,-19.2,95.8,-5.2C93.5,8.8,82.2,21.9,71.6,33.5C60.9,45.1,50.8,55.3,39.1,63.3C27.4,71.3,14,77.1,0.5,76.3C-13,75.4,-26,67.9,-38.3,59.8C-50.6,51.7,-62.3,43,-70.7,31.8C-79.1,20.6,-84.3,6.9,-82.2,-6C-80.1,-18.9,-70.7,-31,-60.6,-40.8C-50.5,-50.6,-39.7,-58.1,-27.9,-66.6C-16.1,-75.1,-3.3,-84.6,11.5,-86.6L26.3,-88.6" transform="translate(100 100)" />
                </svg>
            </div>

            <div class="max-w-6xl mx-auto px-6 relative z-10 flex flex-col md:flex-row gap-10 items-center">
                <div class="flex-1">
                    <div class="flex items-center gap-2 text-sm font-semibold mb-6">
                        <span class="text-[#a435f0] font-bold tracking-wide uppercase text-xs">Agora Online</span>
                        <span class="text-gray-400 dark:text-gray-500">|</span>
                        <a href="/courses" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 transition-colors">← Tüm Kurslara Dön</a>
                    </div>

                    <h1 id="c-title" class="text-3xl md:text-5xl font-bold text-[#1e1e1e] dark:text-white mb-4 leading-tight"></h1>
                    
                    <p id="c-desc" class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-2xl leading-relaxed"></p>

                    <div class="flex items-center gap-4 mb-8">
                        <div class="flex -space-x-2">
                            <img class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-700" src="https://ui-avatars.com/api/?name=Instructor&background=random" alt="Instructor">
                            <img class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-700" src="https://ui-avatars.com/api/?name=Agora&background=0D8ABC&color=fff" alt="Agora">
                        </div>
                        <div class="text-sm">
                            <p class="text-gray-500 dark:text-gray-400">Sağlayıcı:</p>
                            <p id="c-provider" class="font-bold text-gray-900 dark:text-white"></p>
                        </div>
                        <span class="bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 text-xs font-bold px-2 py-1 rounded ml-2">Üst Düzey Eğitmen</span>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-center">
                        <button id="join-btn" class="bg-[#0056d2] hover:bg-[#00419e] text-white text-lg font-bold py-3 px-10 rounded shadow-md transition-all transform hover:-translate-y-0.5 dark:bg-blue-600 dark:hover:bg-blue-700">
                            Ücretsiz Kaydolun
                        </button>
                        <div class="text-sm">
                            <span class="font-bold text-gray-900 dark:text-white block" id="c-students">1.250</span>
                            <span class="text-gray-500 dark:text-gray-400">zaten kayıtlı</span>
                        </div>
                    </div>
                    <p id="status-msg" class="text-sm font-medium mt-3 text-blue-600 dark:text-blue-400"></p>
                </div>

                <div class="w-full md:w-1/3 shrink-0 hidden md:block relative group">
                     <div class="absolute inset-0 bg-blue-600 rounded-lg transform rotate-6 opacity-20 group-hover:rotate-3 transition-all duration-500"></div>
                     <img id="c-img" src="" class="relative w-full rounded-lg shadow-2xl transform rotate-3 group-hover:rotate-0 transition-all duration-500 border-4 border-white dark:border-gray-700 object-cover h-64" alt="Course Image">
                </div>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-6 relative z-20 -mt-16">
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl border border-gray-100 dark:border-gray-700 p-6 grid grid-cols-2 md:grid-cols-4 gap-6 divide-x divide-gray-100 dark:divide-gray-700 transition-colors duration-300">
                
                <div class="flex flex-col gap-1 pl-4">
                    <span class="font-bold text-gray-900 dark:text-white">Eğitmen</span>
                    <span id="c-provider-stat" class="text-sm text-gray-500 dark:text-gray-400">...</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span class="text-sm text-gray-500 dark:text-gray-400">Kurs Ücreti</span>
                    <span id="c-price" class="font-bold text-green-600 dark:text-green-400 text-xl">...</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span id="c-level" class="font-bold text-gray-900 dark:text-white">Başlangıç</span>
                    <span class="text-sm text-gray-500 dark:text-gray-400">Ön bilgi gerekmez</span>
                </div>

                <div class="flex flex-col gap-1 pl-6">
                    <span id="c-duration" class="font-bold text-gray-900 dark:text-white">Esnek Program</span>
                    <span class="text-sm text-gray-500 dark:text-gray-400">Kendi hızınızda öğrenin</span>
                </div>
            </div>
        </div>

        <div class="border-b border-gray-200 dark:border-gray-700 mt-10">
            <div class="max-w-6xl mx-auto px-6">
                <nav class="flex gap-8 overflow-x-auto">
                    <button class="border-b-2 border-[#0056d2] text-[#0056d2] dark:text-blue-400 dark:border-blue-400 font-semibold py-4 px-2 whitespace-nowrap">Hakkında</button>
                </nav>
            </div>
        </div>

        <div class="max-w-6xl mx-auto px-6 py-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Öğrenecekleriniz</h2>
            
            <div id="c-outcomes-list" class="grid md:grid-cols-2 gap-4 text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-800 p-6 rounded-xl border border-gray-100 dark:border-gray-700 transition-colors duration-300">
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-3/4 animate-pulse"></div>
                <div class="h-4 bg-gray-200 dark:bg-gray-700 rounded w-1/2 animate-pulse"></div>
            </div>
        </div>

    </div> 

    <script>
    import { createClient } from '@supabase/supabase-js';

    // Element Seçimleri
    const loader = document.getElementById('loader') as HTMLElement;
    const content = document.getElementById('content') as HTMLElement;
    
    const cTitle = document.getElementById('c-title') as HTMLElement;
    const cDesc = document.getElementById('c-desc') as HTMLElement;
    const cProvider = document.getElementById('c-provider') as HTMLElement;
    const cProviderStat = document.getElementById('c-provider-stat') as HTMLElement;
    const cPrice = document.getElementById('c-price') as HTMLElement; 
    const cLevel = document.getElementById('c-level') as HTMLElement;
    const cDuration = document.getElementById('c-duration') as HTMLElement;
    const cStudents = document.getElementById('c-students') as HTMLElement;
    const cOutcomesList = document.getElementById('c-outcomes-list') as HTMLElement;
    
    const cImg = document.getElementById('c-img') as HTMLImageElement;
    const joinBtn = document.getElementById('join-btn') as HTMLButtonElement;
    const statusMsg = document.getElementById('status-msg') as HTMLElement;

    const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    );

    const params = new URLSearchParams(window.location.search);
    const courseSlug = params.get('slug'); 

    async function init() {
        if (!loader || !content || !cTitle || !joinBtn) return;

        if (!courseSlug) {
            alert("Kurs URL hatası. Listeye yönlendiriliyorsunuz.");
            window.location.href = "/courses";
            return;
        }

        const { data: course, error } = await supabase
            .from('courses')
            .select('*')
            .eq('slug', courseSlug)
            .single();

        if (error || !course) {
            loader.innerHTML = "<p class='text-red-500 font-bold'>Kurs bulunamadı.</p>";
            return;
        }

        // HTML Doldurma
        document.title = `${course.title} | Agora`;
        cTitle.innerText = course.title;
        cDesc.innerText = course.description;
        
        const providerName = course.provider || "Agora Academy";
        cProvider.innerText = providerName;
        if(cProviderStat) cProviderStat.innerText = providerName;
        
        if(cPrice) cPrice.innerText = course.price || "Ücretsiz";
        
        if(cLevel) cLevel.innerText = course.level || "Başlangıç";
        if(cDuration) cDuration.innerText = course.duration || "Esnek Süre";
        if(cStudents && course.students_count) cStudents.innerText = course.students_count;
        
        if(cImg) cImg.src = course.image_url || 'https://via.placeholder.com/600x400';

        // Kazanım Listesi
        if (cOutcomesList) {
            cOutcomesList.innerHTML = "";
            if (course.outcomes) {
                const items = course.outcomes.split('\n');
                items.forEach((item: string) => {
                    if(item.trim() !== "") {
                        const li = `
                            <div class="flex gap-3 items-start">
                                <svg class="w-5 h-5 text-green-600 dark:text-green-400 shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                <span class="leading-relaxed">${item}</span>
                            </div>
                        `;
                        cOutcomesList.innerHTML += li;
                    }
                });
            } else {
                cOutcomesList.innerHTML = "<p class='text-gray-500 italic'>Detaylı kazanım bilgisi eklenmemiş.</p>";
            }
        }

        loader.classList.add('hidden');
        content.classList.remove('hidden');

        // Giriş Kontrolü
        const { data: { user } } = await supabase.auth.getUser();

        if (user) {
            const { data: enrollment } = await supabase
                .from('course_enrollments')
                .select('*')
                .eq('user_id', user.id)
                .eq('course_id', course.id)
                .single();

            if (enrollment) {
                setButtonJoined();
            }
        }

        // Buton Olayı
        joinBtn.addEventListener('click', async () => {
            if (!user) {
                alert("Kursa katılmak için lütfen giriş yapın.");
                window.location.href = "/login";
                return;
            }

            joinBtn.innerText = "Kaydediliyor...";
            joinBtn.disabled = true;
            joinBtn.classList.add("opacity-75", "cursor-not-allowed");

            const { error: joinError } = await supabase
                .from('course_enrollments')
                .insert({ 
                    user_id: user.id, 
                    course_id: course.id 
                });

            if (!joinError) {
                setButtonJoined();
                alert("Başarıyla kayıt oldunuz! İyi dersler.");
            } else {
                joinBtn.innerText = "Hata Oluştu";
                joinBtn.disabled = false;
                joinBtn.classList.remove("opacity-75", "cursor-not-allowed");
                console.error(joinError);
            }
        });
    }

    function setButtonJoined() {
        if (joinBtn && statusMsg) {
            joinBtn.innerText = "Derse Git →";
            joinBtn.className = "bg-green-600 hover:bg-green-700 text-white text-lg font-bold py-3 px-10 rounded shadow-md transition-all";
            
            joinBtn.onclick = () => {
                alert("Ders içeriği yakında eklenecek!");
            };

            statusMsg.innerText = "Bu kurs kütüphanenizde mevcut.";
            statusMsg.className = "text-sm font-bold mt-3 text-green-600 dark:text-green-400 flex items-center gap-1 before:content-['✓']";
        }
    }

    init();
    </script>
</Layout>