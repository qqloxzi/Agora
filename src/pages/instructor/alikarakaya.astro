---
import Layout from '../../layouts/Layout.astro';

const teacher = {
    name: "Ali Karakaya",
    title: "Eğitmen",
    location: "İzmir, Türkiye",
    // BURAYA FOTOĞRAF YOLUNU EKLİYORUZ
    // Eğer fotoğrafın public klasörü içindeki 'images' klasöründeyse: "/images/ali-profil.jpg" yazmalısın.
    // Direkt public içindeyse: "/ali-profil.jpg"
    avatar: "/ali1.jpg", 
    about: "Go ile daha öncesinde tanışmış olsa da 1 yıldır aktif olarak go oynuyor. Bu dönemde Goizmde aktif rol alıyor ve go ile ilgili öğrendiklerini paylaşmaktan hoşlanıyor.",
    social: {
        youtube: "#",
        email: "info@agorago.com"
    },
    courses: [
        {
            title: "Temel Taşlar",
            category: "Başlangıç",
            image: "https://images.unsplash.com/photo-1583863499278-f3162705531d?q=80&w=600&auto=format&fit=crop",
            slug: "temel-taslar" 
        },
    ]
};
---

<Layout title={`${teacher.name} | Eğitmen Profili`}>
  
  <div class="bg-white dark:bg-gray-900 min-h-screen font-sans text-gray-800 dark:text-gray-200 pb-20 transition-colors duration-300">
    
    <div class="max-w-3xl mx-auto px-6 pt-24 pb-12 text-center md:text-left border-b border-gray-100 dark:border-gray-800">
        <div class="flex flex-col md:flex-row items-center gap-8">
            
            <div class="shrink-0">
                <img 
                    src={teacher.avatar} 
                    alt={teacher.name} 
                    class="w-32 h-32 rounded-full object-cover shadow-sm grayscale hover:grayscale-0 transition-all duration-500" 
                />
            </div>

            <div class="space-y-3">
                <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">{teacher.name}</h1>
                <p class="text-xl text-gray-500 dark:text-gray-400 font-light">{teacher.title}</p>
                
                <div class="flex items-center justify-center md:justify-start gap-5 pt-1">
                    <a href={`mailto:${teacher.social.email}`} class="text-gray-400 hover:text-black dark:hover:text-white transition-colors" title="Email">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                    </a>
                    <span class="text-gray-300 dark:text-gray-600 text-sm">|</span>
                    <span class="text-gray-400 dark:text-gray-500 text-sm flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                        {teacher.location}
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-3xl mx-auto px-6 py-12">
        
        <section class="mb-16">
            <h2 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-6">Hakkında</h2>
            <div class="text-lg text-gray-800 dark:text-gray-300 leading-relaxed space-y-4 whitespace-pre-line font-serif">
                {teacher.about}
            </div>
        </section>

        <section>
            <h2 class="text-xs font-bold text-gray-400 dark:text-gray-500 uppercase tracking-widest mb-8">Eğitimler</h2>
            
            <div class="space-y-8">
                {teacher.courses.map(course => (
                    <a href={`/course-detail?slug=${course.slug}`} class="block group">
                        <div class="flex flex-col md:flex-row gap-6 items-start p-4 -mx-4 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                            
                            <div class="w-full md:w-48 h-32 shrink-0 overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-700 shadow-sm border border-gray-100 dark:border-gray-700">
                                <img src={course.image} alt={course.title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500" />
                            </div>

                            <div class="flex-1 py-1">
                                <div class="text-xs font-bold text-blue-600 dark:text-blue-400 mb-2 uppercase tracking-wide">{course.category}</div>
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors mb-2">
                                    {course.title}
                                </h3>
                                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 group-hover:text-gray-900 dark:group-hover:text-white transition-colors">
                                    <span>İncele</span>
                                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                </div>
                            </div>

                        </div>
                    </a>
                ))}
            </div>
        </section>

    </div>
  </div>

</Layout>