---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';
import CookieConsent from "@components/CookieConsent.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/logo_browser.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Go Akademisi"
  : "Go Akademisi - Online Go Eğitim Platformu";
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/logo_browser.jpg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Go Akademisi, Türkiye'deki oyuncular için online Go eğitimi sunan bir platformdur. Başlangıç seviyesinden ileri seviyeye kadar çeşitli kurslar ve interaktif öğrenme materyalleri ile Go oyununu öğrenin ve geliştirin."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Go Akademisi - Online Go Eğitim Platformu`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Go Akademisi Ana Sayfa",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    
    <CookieConsent />

    <style is:global>
    
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>