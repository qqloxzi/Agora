---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';
import CookieConsent from "@components/CookieConsent.astro";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/CircleLogo450.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Agora Go Akademisi"
  : "Agora Go Akademisi - Çevrimiçi Go Eğitim Platformu";
---

<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/CircleLogo450.ico" />
    <meta name="generator" content={Astro.generator} />

   <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('color-theme')) {
          return localStorage.getItem('color-theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })(); 
    
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
        document.documentElement.classList.remove('light'); 
      } else {
        document.documentElement.classList.remove('dark'); 
        document.documentElement.classList.add('light');    
      }
    </script>

    <SEO
      title={makeTitle}
      description="Agora Go Akademisi, Türkiye'deki oyuncular için çevrimiçi Go eğitimi sunan bir platformdur..."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Agora Go Akademisi - Çevrimiçi Go Eğitim Platformu`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Agora Go Akademisi Ana Sayfa",
        },
      }}
    />

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Agora Go Akademisi",
      "url": "https://agoragoakademisi.com",
      "logo": "https://agoragoakademisi.com/CircleLogo450.png"
    }
    </script>
  </head>
  
  <body class="bg-[#DFE1E5] dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    
    <div id="app-navbar">
      <Navbar />
    </div>

    <main>
      <slot />
    </main>
    
    <div id="app-footer">
      <Footer />
    </div>
    
    <CookieConsent />

    <style is:global>
      img {
        content-visibility: auto;
      }
      .transition-colors {
        transition-property: background-color, border-color, color, fill, stroke;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
      }

      /* --- OYUN MODU (FULLSCREEN) CSS --- */
      
      body.fullscreen-mode {
          overflow: hidden; /* Kaydırmayı engelle */
          height: 100vh;
          width: 100vw;
          position: fixed;
      }

      /* 3. DEĞİŞİKLİK: Artık tahmin yürütmüyoruz, direkt ID ile gizliyoruz */
      body.fullscreen-mode #app-navbar,
      body.fullscreen-mode #app-footer,
      body.fullscreen-mode .astro-navbar { 
          display: none !important;
      }

      /* Oyun konteynerini tam ekran yap */
      body.fullscreen-mode .game-manager-container {
          padding: 0;
          margin: 0;
          height: 100vh;
          width: 100vw;
          /* Arka plan rengini body ile eşleştirmek için 'inherit' veya transparan yapabiliriz */
          background-color: var(--tree-bg) !important; 
          display: flex;
          justify-content: center;
          align-items: center;
          z-index: 9999; 
          position: fixed;
          top: 0;
          left: 0;
      }

      /* Oyun arka planının koyu/açık mod uyumu */
      html.dark body.fullscreen-mode .game-manager-container {
          background-color: #1a202c; /* Koyu Mod Arka Planı */
      }
      html.light body.fullscreen-mode .game-manager-container {
          background-color: #ffffff; /* Açık Mod Arka Planı */
      }

      /* Oyun görünümünü ortala ve sığdır */
      body.fullscreen-mode .playing-view {
          width: 100%;
          height: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 0;
          box-sizing: border-box;
      }

      /* Mobilde taşma olmaması için düzenleme */
      body.fullscreen-mode .game-layout {
          max-height: 100vh;
          width: 100%;
          overflow-y: auto; 
          display: flex;
          justify-content: center;
      }
    </style>
  </body>
</html>