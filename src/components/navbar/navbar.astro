        </div>
      </div>
      
      {/* MOBÄ°L MENÃœ KISMI (DÃœZELTÄ°LDÄ°) */}
      <MenuItems class="hidden lg:hidden mt-4">
        <ul class="flex flex-col gap-4 bg-white dark:bg-gray-900 border border-gray-100 dark:border-gray-800 rounded-lg p-4 shadow-lg">
           {menuitems.map((item) => (
             <li><a href={item.path} class="block py-2 text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white font-medium">{item.title}</a></li>
           ))}
           
           <li class="pt-2 border-t border-gray-100 dark:border-gray-800">
              {/* MOBÄ°L Ä°Ã‡Ä°N GÄ°RÄ°Åž BUTONU (ID EKLENDÄ°) */}
              <a id="mobile-nav-login-btn" href="/signup" class="block py-2 text-center text-white bg-slate-800 rounded-full font-bold">
                GiriÅŸ Yap
              </a>

              {/* MOBÄ°L Ä°Ã‡Ä°N PROFÄ°L BUTONU (EKLENDÄ°) */}
              <a id="mobile-nav-profile-btn" href="/profile" class="hidden flex items-center justify-center gap-2 py-2 text-center text-indigo-600 dark:text-indigo-400 bg-indigo-50 dark:bg-indigo-900/30 rounded-full font-bold border border-indigo-100 dark:border-indigo-800">
                <div class="w-6 h-6 rounded-full bg-indigo-200 flex items-center justify-center text-indigo-700 text-xs">
                    ðŸ‘¤
                </div>
                <span id="mobile-user-name">Profilim</span>
              </a>
           </li>
        </ul>
      </MenuItems>

    </Astronav>
  </div>
</header>
<div class="h-20"></div>

<script>
  import { supabase } from 'lib/supabase'; // Import yolunu kontrol et

  async function checkNavbarAuth() {
    try {
      // MasaÃ¼stÃ¼ ElemanlarÄ±
      const loginBtn = document.getElementById('nav-login-btn');
      const profileBtn = document.getElementById('nav-profile-btn');
      const userNameSpan = document.getElementById('nav-user-name');

      // Mobil ElemanlarÄ± (Yeni Eklenenler)
      const mobileLoginBtn = document.getElementById('mobile-nav-login-btn');
      const mobileProfileBtn = document.getElementById('mobile-nav-profile-btn');
      const mobileUserNameSpan = document.getElementById('mobile-user-name');

      const { data: { user }, error } = await supabase.auth.getUser();

      if (user) {
        // --- GiriÅŸ YapÄ±lmÄ±ÅŸsa ---
        
        // MasaÃ¼stÃ¼: GiriÅŸi gizle, Profili aÃ§
        if(loginBtn) loginBtn.classList.add('hidden');
        if(profileBtn) {
            profileBtn.classList.remove('hidden');
            profileBtn.style.display = 'flex';
        }

        // Mobil: GiriÅŸi gizle, Profili aÃ§
        if(mobileLoginBtn) mobileLoginBtn.classList.add('hidden');
        if(mobileProfileBtn) {
            mobileProfileBtn.classList.remove('hidden');
            // mobileProfileBtn.classList.add('flex'); // Gerekirse flex ekle
        }

        // KullanÄ±cÄ± AdÄ±nÄ± Ã‡ek ve Yaz
        let displayName = "Profilim";
        const { data: profile } = await supabase
            .from('agorasusers')
            .select('username')
            .eq('id', user.id)
            .single();
        
        displayName = profile?.username || user.email?.split('@')[0] || "Profilim";
        
        // Ä°smi kÄ±salt
        if (displayName.length > 15) {
            displayName = displayName.substring(0, 12) + '...';
        }

        // MasaÃ¼stÃ¼ ismini yaz
        if (userNameSpan) userNameSpan.innerText = displayName;
        
        // Mobil ismini yaz
        if (mobileUserNameSpan) mobileUserNameSpan.innerText = displayName;

      } else {
        // --- Ã‡Ä±kÄ±ÅŸ YapÄ±lmÄ±ÅŸsa ---
        
        // MasaÃ¼stÃ¼: Profili gizle, GiriÅŸi aÃ§
        if(loginBtn) loginBtn.classList.remove('hidden');
        if(profileBtn) profileBtn.classList.add('hidden');

        // Mobil: Profili gizle, GiriÅŸi aÃ§
        if(mobileLoginBtn) mobileLoginBtn.classList.remove('hidden');
        if(mobileProfileBtn) mobileProfileBtn.classList.add('hidden');
      }
    } catch (err) {
      console.error("Navbar Script HatasÄ±:", err);
    }
  }

  // Script Ã§alÄ±ÅŸtÄ±ÄŸÄ±nda kontrol et
  checkNavbarAuth();

  // --- DARK MODE KODLARI (AynÄ± kaldÄ±) ---
  const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
  const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
  const themeToggleBtn = document.getElementById('theme-toggle');

  const currentTheme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('color-theme')) {
          return localStorage.getItem('color-theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
      }
      return 'light';
  })();

  if (currentTheme === 'dark') {
      document.documentElement.classList.add('dark');
      document.documentElement.classList.remove('light'); 
      themeToggleLightIcon?.classList.remove('hidden');
  } else {
      document.documentElement.classList.remove('dark');  
      document.documentElement.classList.add('light');    
      themeToggleDarkIcon?.classList.remove('hidden');
  }

  themeToggleBtn?.addEventListener('click', () => {
      themeToggleDarkIcon?.classList.toggle('hidden');
      themeToggleLightIcon?.classList.toggle('hidden');

      if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          document.documentElement.classList.add('light'); 
          localStorage.setItem('color-theme', 'light');
      } 
      else {
          document.documentElement.classList.remove('light'); 
          document.documentElement.classList.add('dark');
          localStorage.setItem('color-theme', 'dark');
      }
  });
</script>