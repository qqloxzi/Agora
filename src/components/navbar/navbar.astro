---
// components/navbar.astro
import Container from "@components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  { title: "Ligler", path: "/ligler" },
  { title: "Kurs Planları", path: "/pricing" },
  { title: "Hakkımızda", path: "/about" },
  { title: "Kütüphane", path: "/blog" },
  { title: "İletişim", path: "/contact" },
  { title: "Go Ağacı", path: "/goagaci" },
];
---

<header class="fixed top-0 left-0 w-full z-50 bg-white dark:bg-gray-900 border-b border-gray-100 dark:border-gray-800 shadow-sm transition-all">
  <Container>
    <div class="py-4 lg:py-5 flex items-center justify-between">
      
      <a href="/" class="flex items-center z-50 relative">
        <img src="/transparentAgora.svg" alt="Agora Logo" class="w-24 h-auto object-contain" />
      </a>

      <nav class="hidden lg:flex items-center gap-8">
        {menuitems.map((item) => (
          <a href={item.path} class="text-gray-600 dark:text-gray-300 hover:text-black dark:hover:text-white font-medium transition-colors">
            {item.title}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-3">
        
        <div id="nav-auth-container" class="hidden lg:flex items-center"> <a id="nav-login-btn" href="/signup" class="px-4 py-2 text-sm font-medium text-white bg-slate-800 hover:bg-slate-700 rounded-full transition-colors">
                Giriş Yap
            </a>
            <a id="nav-profile-btn" href="/profile" class="hidden flex items-center gap-2 p-1 pr-3 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-all border border-transparent hover:border-gray-200 dark:hover:border-gray-700 group">
                <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-300">
                   <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 119 0 4.5 4.5 0 01-9 0zM3.751 20.105a8.25 8.25 0 0116.498 0 .75.75 0 01-.437.695A18.683 18.683 0 0112 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 01-.437-.695z" clip-rule="evenodd" /></svg>
                </div>
                <span id="nav-user-name" class="text-sm font-medium text-gray-700 dark:text-gray-200 group-hover:text-black dark:group-hover:text-white">Profilim</span>
            </a>
        </div>

        <button id="theme-toggle" class="p-2 rounded-full bg-transparent hover:bg-gray-200/50 dark:hover:bg-gray-700/50 text-gray-600 dark:text-gray-300 transition-all focus:outline-none z-50">
           <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"></path></svg>
           <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path></svg>
        </button>

        <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-600 dark:text-gray-300 focus:outline-none z-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>

      </div>
    </div>
  </Container>
</header>

<div id="mobile-overlay" class="fixed inset-0 bg-black/50 z-[60] hidden transition-opacity opacity-0 lg:hidden"></div>

<div id="mobile-sidebar" class="fixed top-0 left-0 w-64 h-full bg-white dark:bg-gray-900 z-[70] transform -translate-x-full transition-transform duration-300 ease-in-out shadow-2xl lg:hidden flex flex-col">
    
    <div class="flex items-center justify-between p-4 border-b border-gray-100 dark:border-gray-800">
        <img src="/transparentAgora.svg" alt="Agora Logo" class="w-20 h-auto" />
        <button id="close-sidebar-btn" class="text-gray-500 hover:text-black dark:hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <nav class="flex-1 overflow-y-auto py-4 px-4">
        <ul class="flex flex-col gap-2">
            {menuitems.map((item) => (
                <li>
                    <a href={item.path} class="block py-3 px-2 rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-800 font-medium">
                        {item.title}
                    </a>
                </li>
            ))}
        </ul>

        <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-800">
             <div id="mobile-auth-container">
                 <a id="mobile-login-btn" href="/signup" class="block w-full text-center py-3 bg-slate-800 text-white rounded-lg font-medium">Giriş Yap</a>
                 
                 <a id="mobile-profile-btn" href="/profile" class="hidden flex items-center gap-3 py-3 px-2 rounded-md hover:bg-gray-50 dark:hover:bg-gray-800">
                    <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900 flex items-center justify-center text-blue-600 dark:text-blue-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" /></svg>
                    </div>
                    <span id="mobile-user-name" class="font-medium text-gray-700 dark:text-gray-200">Profilim</span>
                 </a>
             </div>
        </div>
    </nav>
</div>

<div class="h-20 lg:h-24"></div>

<script>
  import { supabase } from 'lib/supabase';

  // --- 1. SIDEBAR KONTROLÜ (YENİ) ---
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('close-sidebar-btn');
  const overlay = document.getElementById('mobile-overlay');
  const sidebar = document.getElementById('mobile-sidebar');

  function openSidebar() {
      overlay?.classList.remove('hidden');
      // Küçük bir gecikmeyle opacity ekle ki transition çalışsın
      setTimeout(() => overlay?.classList.remove('opacity-0'), 10);
      sidebar?.classList.remove('-translate-x-full');
      document.body.style.overflow = 'hidden'; // Arka planı kilitle
  }

  function closeSidebar() {
      overlay?.classList.add('opacity-0');
      sidebar?.classList.add('-translate-x-full');
      setTimeout(() => overlay?.classList.add('hidden'), 300);
      document.body.style.overflow = '';
  }

  mobileBtn?.addEventListener('click', openSidebar);
  closeBtn?.addEventListener('click', closeSidebar);
  overlay?.addEventListener('click', closeSidebar);

  // --- 2. AUTH KONTROLÜ (GÜNCELLENDİ: Hem Desktop Hem Mobil için) ---
  async function checkNavbarAuth() {
    try {
      // Desktop Elementleri
      const dLoginBtn = document.getElementById('nav-login-btn');
      const dProfileBtn = document.getElementById('nav-profile-btn');
      const dUserName = document.getElementById('nav-user-name');
      
      // Mobil Elementleri
      const mLoginBtn = document.getElementById('mobile-login-btn');
      const mProfileBtn = document.getElementById('mobile-profile-btn');
      const mUserName = document.getElementById('mobile-user-name');

      const { data: { user } } = await supabase.auth.getUser();

      if (user) {
        // Kullanıcı giriş yapmış
        
        // Desktop Güncelle
        dLoginBtn?.classList.add('hidden');
        dProfileBtn?.classList.remove('hidden');
        dProfileBtn && (dProfileBtn.style.display = 'flex');

        // Mobil Güncelle
        mLoginBtn?.classList.add('hidden');
        mProfileBtn?.classList.remove('hidden');
        mProfileBtn && (mProfileBtn.style.display = 'flex');

        // İsim Çekme
        const { data: profile } = await supabase
            .from('agorasusers')
            .select('username')
            .eq('id', user.id)
            .single();
        
        const displayName = profile?.username || user.email?.split('@')[0] || "Profilim";
        const shortName = displayName.length > 15 ? displayName.substring(0, 12) + '...' : displayName;

        if(dUserName) dUserName.innerText = shortName;
        if(mUserName) mUserName.innerText = shortName;

      } else {
        // Giriş yapılmamış
        dLoginBtn?.classList.remove('hidden');
        dProfileBtn?.classList.add('hidden');

        mLoginBtn?.classList.remove('hidden');
        mProfileBtn?.classList.add('hidden');
      }
    } catch (err) {
      console.error("Navbar Script Hatası:", err);
    }
  }

  checkNavbarAuth();

  // --- 3. TEMA AYARLARI (AYNEN KORUNDU) ---
  const themeToggleDarkIcon = document.getElementById('theme-toggle-dark-icon');
  const themeToggleLightIcon = document.getElementById('theme-toggle-light-icon');
  const themeToggleBtn = document.getElementById('theme-toggle');

  const currentTheme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('color-theme')) {
          return localStorage.getItem('color-theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
      }
      return 'light';
  })();

  if (currentTheme === 'dark') {
      document.documentElement.classList.add('dark');
      document.documentElement.classList.remove('light');
      themeToggleLightIcon?.classList.remove('hidden');
  } else {
      document.documentElement.classList.remove('dark');
      document.documentElement.classList.add('light');
      themeToggleDarkIcon?.classList.remove('hidden');
  }

  themeToggleBtn?.addEventListener('click', () => {
      themeToggleDarkIcon?.classList.toggle('hidden');
      themeToggleLightIcon?.classList.toggle('hidden');

      if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          document.documentElement.classList.add('light');
          localStorage.setItem('color-theme', 'light');
      } else {
          document.documentElement.classList.remove('light');
          document.documentElement.classList.add('dark');
          localStorage.setItem('color-theme', 'dark');
      }
  });
</script>