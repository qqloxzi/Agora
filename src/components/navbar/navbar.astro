---
import Container from "@components/container.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  { title: "Ligler", path: "/ligler" },
  { title: "Kurs Planları", path: "/pricing" },
  { title: "Hakkımızda", path: "/about" },
  { title: "Kütüphane", path: "/blog" },
  { title: "İletişim", path: "/contact" },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-full items-center justify-between lg:gap-10">
        <div class="flex items-center justify-between w-full lg:w-auto">
          <a href="/" class="flex items-center">
            <img src="/transparentAgora.svg" alt="Agora Go Akademisi Logo" class="w-24 h-auto object-contain" />
          </a>
          <div class="block lg:hidden">
            <MenuIcon class="w-4 h-4 text-gray-800" />
          </div>
        </div>

        <MenuItems class="hidden w-full lg:w-full mt-2 lg:flex lg:mt-0 items-center">
          <ul class="flex flex-col lg:flex-row lg:gap-6 items-center">
            {menuitems.map((item) => (
              <li>
                <a href={item.path} class="flex py-2 text-gray-600 hover:text-black font-medium transition-colors">
                  {item.title}
                </a>
              </li>
            ))}
          </ul>

          <div class="flex flex-col lg:flex-row lg:items-center gap-4 mt-4 lg:mt-0 lg:ml-auto">
            <div id="auth-guest" class="flex items-center gap-4">
              <a href="/login" class="text-gray-600 hover:text-black font-medium transition-colors px-4 py-2">Giriş Yap</a>
              <a href="/signup" class="bg-[#1e3561] text-white px-6 py-2 rounded-full font-medium hover:bg-[#1d4ed8] transition-all text-center shadow-md">Kayıt Ol</a>
            </div>

            <div id="auth-user" class="auth-hidden flex items-center gap-4">
              <button id="logout-nav-btn" class="text-gray-600 hover:text-black font-medium transition-colors px-4 py-2">Çıkış Yap</button>
              <a href="/profile" class="bg-[#1e3561] text-white px-6 py-2 rounded-full font-medium hover:bg-[#1d4ed8] transition-all text-center shadow-md">Profilim</a>
            </div>
          </div>
        </MenuItems>
      </div>
    </Astronav>
  </header>
</Container>

<style>
  /* Tailwind'in hidden sınıfıyla çakışmaması için isim değiştirdik */
  .auth-hidden { display: none !important; }
</style>

<script>
  import { supabase } from '../../lib/supabase';

  async function updateNav() {
    const guestZone = document.getElementById('auth-guest');
    const userZone = document.getElementById('auth-user');

    if (!guestZone || !userZone) return; // Elemanlar yoksa fonksiyonu durdur

    try {
      const { data: { session } } = await supabase.auth.getSession();

      if (session) {
        guestZone.classList.add('auth-hidden');
        userZone.classList.remove('auth-hidden');
      } else {
        guestZone.classList.remove('auth-hidden');
        userZone.classList.add('auth-hidden');
      }
    } catch (e) {
      console.error("Navigasyon güncellenirken hata oluştu:", e);
    }
  }

  // Güvenli buton dinleyicisi
  const logoutBtn = document.getElementById('logout-nav-btn');
  if (logoutBtn) {
    logoutBtn.addEventListener('click', async () => {
      await supabase.auth.signOut();
      window.location.href = '/login';
    });
  }

  // Dinleyiciyi başlat
  supabase.auth.onAuthStateChange(() => {
    updateNav();
  });

  // İlk yüklemede çalıştır
  updateNav();
</script>