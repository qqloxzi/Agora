            <MenuItems class="hidden lg:flex">
                <ul class="flex items-center gap-8"> 
                {menuitems.map((item) => {
                  const isSpecial = item.title === "Go AÄŸacÄ±";
                  return (
                    <li class="relative flex items-center">
                      <a href={item.path} class={`transition-all duration-300 whitespace-nowrap ${isSpecial ? "text-lg font-extrabold text-indigo-600 dark:text-indigo-400 scale-110 hover:scale-125 drop-shadow-sm" : "text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 font-medium hover:scale-105"}`}>
                          {item.title}
