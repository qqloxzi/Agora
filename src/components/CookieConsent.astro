<div
  id="cookie-banner"
  class="fixed bottom-0 left-0 w-full bg-white border-t border-slate-200 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)] z-50 hidden transition-all duration-500 transform translate-y-full"
>
  <div class="max-w-screen-xl mx-auto px-5 py-4 flex flex-col md:flex-row items-center justify-between gap-4">
    
    <div class="text-slate-600 text-sm md:text-base">
      <p>
        Sizlere daha iyi hizmet sunabilmek için sitemizde çerezler (cookies) kullanıyoruz. 
        Detaylı bilgi için <a href="/yasal/gizlilik-ve-cerez" class="text-black font-semibold underline hover:text-slate-700">Gizlilik ve Çerez Politikamızı</a> inceleyebilirsiniz.
      </p>
    </div>

    <div class="flex gap-3">
      <button
        id="accept-cookies"
        class="bg-black text-white px-6 py-2.5 rounded-lg font-medium text-sm hover:bg-slate-800 transition-colors whitespace-nowrap shadow-sm"
      >
        Kabul Et
      </button>
      
      <button
        id="close-cookie-banner"
        class="text-slate-500 hover:text-slate-800 p-2"
        aria-label="Kapat"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>

  </div>
</div>

<script>
  // Tarayıcı yüklendiğinde çalışacak kod
  document.addEventListener('DOMContentLoaded', () => {
    const banner = document.getElementById('cookie-banner');
    const acceptBtn = document.getElementById('accept-cookies');
    const closeBtn = document.getElementById('close-cookie-banner');
    
    // Kullanıcı daha önce kabul etti mi kontrol et
    const cookieAccepted = localStorage.getItem('cookieConsent');

    // Eğer kabul edilmemişse banner'ı göster
    if (!cookieAccepted && banner) {
      banner.classList.remove('hidden');
      // Küçük bir gecikme ile animasyonu tetikle (yukarı kaydır)
      setTimeout(() => {
        banner.classList.remove('translate-y-full');
      }, 100);
    }

    // Kabul Et butonuna basınca
    if (acceptBtn && banner) {
      acceptBtn.addEventListener('click', () => {
        // Tarayıcı hafızasına kaydet
        localStorage.setItem('cookieConsent', 'true');
        // Banner'ı gizle
        banner.classList.add('translate-y-full');
        setTimeout(() => {
            banner.classList.add('hidden');
        }, 500);
      });
    }

    // Kapat butonuna basınca (Hafızaya kaydetmeden sadece o anlık kapatır)
    if (closeBtn && banner) {
      closeBtn.addEventListener('click', () => {
        banner.classList.add('translate-y-full');
      });
    }
  });
</script>